<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.drhoffmannsoftware.xearth"
    android:versionCode="22"
    android:versionName="1.1-22" >
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11"/>
    <supports-screens android:smallScreens="true"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:resizeable="true" 
                      android:anyDensity="true"
                  />
    <application
        android:allowBackup="true"
        android:icon="@drawable/xearth_a"
        android:label="@string/app_name" >
        <service
            android:label="@string/wallpaper_name"
            android:name=".XearthWallpaper"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/xearth" />
        </service>
        <activity
            android:label="@string/xearth_settings"
            android:name=".XearthSettingsActivity"
            android:exported="true">
        </activity>
    </application>
</manifest>